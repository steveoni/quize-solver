{
  "manifest_version": 3,
  "name": "OCR + LLM Quiz Solver",
  "version": "1.0",
  "description": "Capture screen, OCR text, send to any LLM endpoint, and display answers.",
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/tesseract.min.js", "scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*", "scripts/languages/*", "images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
