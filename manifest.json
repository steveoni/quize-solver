{
  "manifest_version": 3,
  "name": "Study Notes Helper",
  "version": "1.0",
  "description": "Assists with note-taking and information organization",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.tests.com/*",
    "https://developers.turing.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.tests.com/*",
        "https://developers.turing.com/*",
        "https://vetting-engine.turing.com/*"
      ],
      "js": ["scripts/tesseract.min.js", "scripts/content.js"],
      "world": "ISOLATED",
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["scripts/*", "scripts/languages/*"],
      "matches": [
        "https://www.tests.com/*",
        "https://developers.turing.com/*",
        "https://vetting-engine.turing.com/*"
      ]
    }
  ]
}
